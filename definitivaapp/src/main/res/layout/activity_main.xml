<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.definitivaapp.MainActivity"
    android:background="@color/black"
    android:orientation="vertical"
    >

    <LinearLayout style="@style/LayoutStyle">

        <TextView style="@style/TextViewStyle"
            android:background="@color/black"
            android:text="Por favor ingrese la nota en cada uno de los campos">
        </TextView>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView style="@style/TextViewStyle"
            android:text="Prácticas de laboratorio">
        </TextView>

        <EditText style="@style/EditTextStyle"
            android:hint="60%"
            android:id="@+id/ePractica"
            >
        </EditText>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView style="@style/TextViewStyle"
            android:text="Avance 1 proyecto">
        </TextView>

        <EditText style="@style/EditTextStyle"
            android:hint="5%"
            android:id="@+id/eAvance1">
        </EditText>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView style="@style/TextViewStyle"
            android:text="Avance 2 proyecto">
        </TextView>

        <EditText style="@style/EditTextStyle"
            android:hint="7%"
            android:id="@+id/eAvance2">
        </EditText>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView style="@style/TextViewStyle"
            android:text="Avance 3 proyecto">

        </TextView>

        <EditText style="@style/EditTextStyle"
            android:hint="8%"
            android:id="@+id/eAvance3">
        </EditText>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView style="@style/TextViewStyle"
            android:text="Aplicación final">
        </TextView>

        <EditText style="@style/EditTextStyle"
            android:hint="20%"
            android:id="@+id/eAppfinal">
        </EditText>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="calcular nota definitiva"
            android:background="@color/darkviolet"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"
            android:id="@+id/bCalcular"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/darkblue"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Borrar"
            android:id="@+id/bBorrar"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">

        <TextView style="@style/TextViewStyle"
            android:text="Su Nota Definitiva Es">
        </TextView>

        <EditText style="@style/EditTextStyle"
            android:hint="100%"
            android:id="@+id/eDef"
            android:focusable="false">
        </EditText>

    </LinearLayout>

</LinearLayout>
